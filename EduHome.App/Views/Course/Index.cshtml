  @model CourseViewModel


  	<div class="banner-area-wrapper">
            <div class="banner-area text-center">	
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="banner-content-wrapper">
                                <div class="banner-content">
                                    <h2>courses</h2> 
                                </div> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>    

<div class="course-area pt-150 pb-150">
            <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="course-title">
                        <h3>search courses</h3>
                    </div>

                    <div class="course-form">

                        <form method="post" asp-action="Index" asp-controller="course" enctype="multipart/form-data" >
                            <input name="key" placeholder="Search..." type="search" class="form-control">
                            <button type="submit">search</button>
                        </form>


                    </div>
                </div>
            </div>    

             <div class="row">
                  @await Html.PartialAsync("_CoursePartialView",Model.Courses.Take(9).ToList())

            </div>

 <nav aria-label="Page navigation example">
        <ul class="pagination">
            @for (int i = 1; i <= ViewBag.TotalPage; i++)
            {
                @if (i == ViewBag.CurrentPage)
                {
                    <li class="page-item disabled"><a  class=" page-link" asp-controller="course" asp-action="index" asp-route-page="@i">@i</a></li>
                }
                else
                {
                    <li class="page-item"><a  class=" page-link" asp-controller="course" asp-action="index" asp-route-page="@i">@i</a></li>
                }
            }
        </ul>
</nav>
        </div> 
        </div>   


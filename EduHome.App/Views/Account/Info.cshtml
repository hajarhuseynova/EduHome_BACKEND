@model AppUser

<div id="message" style="display:none">@TempData["Updateuser"] </div>

<div class="banner-area-wrapper">
            <div class="banner-area text-center">	
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="banner-content-wrapper">
                                <div class="banner-content">
                                    <h2>sign up</h2> 
                                </div> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>    
		<!-- Banner Area End -->
        <!-- Register start -->
        <div class="register-area pt-150 pb-150">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3 text-center">
                        <div class="login">
                            <div class="login-form-container">
                                <div class="login-text">
                                    <h2>sign up</h2>
                                    <span>Please register now.</span>
                                </div>
                                <div class="login-form">
                                    <form action="#" method="post">
                                        <input disabled type="text" name="name" placeholder="Name">
                                        <input disabled type="text" name="surname" placeholder="Surname">
                                        <input disabled type="text" name="email" placeholder="Email">
                                        <input disabled type="text" name="user-name" placeholder="Username">
                                        <input disabled type="password" name="user-password" placeholder="Password">
                                        <input disabled type="text" name="confirm-password" placeholder="ConfirmPassword">

                                        <div class="button-box">
                                            <div class="login-toggle-btn">
                                                <input type="checkbox" id="remember">
                                                <label for="remember">Remember me</label>
                                                <a href="#">Forgot Password?</a>
                                            </div>
                                            <button type="submit" class="default-btn">sign up</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


  <script>
      const updateAlert=document.getElementById("message");
      if(updateAlert.innerHTML!=""){
          alert("User Updated!");
      }
  </script>
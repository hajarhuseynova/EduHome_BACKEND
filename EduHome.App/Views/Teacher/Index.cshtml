@model TeacherViewModel



<div class="banner-area-wrapper">
            <div class="banner-area text-center">	
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="banner-content-wrapper">
                                <div class="banner-content">
                                    <h2>our teachers</h2> 
                                </div> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>    

     
        <div class="teacher-area pt-150 pb-105">
            <div class="container">
                <div class="row">

             @foreach (var item in Model.Teachers.Take(12))
        {
                    <div class="col-md-3 col-sm-4 col-xs-12">
                        <div class="single-teacher mb-45">
                            <div class="single-teacher-img">
                                <a asp-action="detail" asp-controller="teacher" asp-route-id="@item.Id"><img src="~/assets/img/@item.Image" alt="teacher"></a>  
                            </div>
                            <div class="single-teacher-content text-center">
                                <h2><a href="teacher-details.html">@item.FullName</a></h2>
                                <h4>@item.teacherPositionCat.Name</h4>
                                <ul>
                                        @foreach (var soc in item.SocialMedias)
                                        {   
                                          <li><a href="@soc.Link">@Html.Raw(soc.Icon)</a></li>
                                        }
                                </ul>
                            </div>
                        </div>
                    </div>
            
        }
                </div>
            </div>
        </div>
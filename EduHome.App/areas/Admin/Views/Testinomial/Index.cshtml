@model IEnumerable<Testinomial>
<div class="container">
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Course Category:</th>
                <th scope="col">Position Category:</th>
                <th scope="col">PersonName:</th>
                <th scope="col">Image:</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <th>@item.CourseCategory.Name</th>
                        <th>@item.PositionCategory.Name</th>

                        <th>@item.PersonName</th>

                         <th><img style="width:100px;height:100px" src="~/assets/img/@item.Image" /></th>
                        <td><a asp-controller="testinomial" asp-action="update" asp-route-id="@item.Id" >
                            <i class="fas fa-edit text text-primary"></i></a></td>
                        <td><a onclick="if(!confirm('Are you sure?')){return false;}"
                            asp-controller="testinomial" asp-action="delete" asp-route-id="@item.Id"
                            class=" delete-item" ><i class="fas fa-trash text text-danger"></i></a></td>
                    </tr>
            }
        </tbody>
    </table>
        <nav aria-label="Page navigation example">
        <ul class="pagination">
            @for (int i = 1; i <= ViewBag.TotalPage; i++)
            {
                @if (i == ViewBag.CurrentPage)
                {
                    <li class="page-item disabled"><a  class=" page-link" asp-controller="testinomial" asp-action="index" asp-route-page="@i">@i</a></li>
                }
                else
                {
                    <li class="page-item"><a class=" page-link" asp-controller="testinomial" asp-action="index" asp-route-page="@i">@i</a></li>
                }
            }
        </ul>
    </nav>
    <div>
        <a asp-controller="testinomial" asp-action="create" style="display: block; text-decoration: none; color: white; width: 100%; height: 100%" a  > 
            <div style="width:100%; " class="btn btn-outline-success">Create Testinomial </div></a>
    </div>
</div>
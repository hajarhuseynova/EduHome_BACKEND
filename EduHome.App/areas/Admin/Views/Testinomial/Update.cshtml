@model Testinomial
<div class="container">
	<form method="post" enctype="multipart/form-data">
		  <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
	<div class="form-group">
		    <label asp-for="@Model.PersonName" >PersonName:</label>
			<input type="text" class="form-control" asp-for="@Model.PersonName"/>
			<span class="text text-danger" asp-validation-for="@Model.PersonName"></span>
	</div>
		<div class="form-group">
		    <label asp-for="@Model.Desc" >Desc:</label>
			<input type="text" class="form-control" asp-for="@Model.Desc"/>
			<span class="text text-danger" asp-validation-for="@Model.Desc"></span>
	    	
    </div>
	<div class="form-group">
            <select asp-for="CourseCategoryId" class="form-select" aria-label="Default select example">
                <option selected>Select Category</option>
                @foreach (var item in  ViewBag.CourseCategory)
                {
                    <option value="@item.Id">@item.Name</option>

                }
            </select>
            <span class="text text-danger" asp-validation-for="CourseCategoryId"></span>
        </div>

			<div class="form-group">
            <select asp-for="PositionCategoryId" class="form-select" aria-label="Default select example">
                <option selected>Select Category</option>
                @foreach (var item in  ViewBag.PositionCategory)
                {
                    <option value="@item.Id">@item.Name</option>

                }
            </select>
            <span class="text text-danger" asp-validation-for="PositionCategoryId"></span>
        </div>


	<div class="form-group">
		    <label asp-for="@Model.FormFile" >File:</label>
			<input type="file" class="form-control" asp-for="@Model.FormFile"/>
			<span class="text text-danger" asp-validation-for="@Model.FormFile"></span>
    </div>

			@Html.AntiForgeryToken()
	<button type="submit" class="btn btn-info">Update</button>
	</form>
</div>
@model Course
<div class="container">
	<form method="post" enctype="multipart/form-data">
	<div class="form-group">
		    <label asp-for="@Model.Info" >Info:</label>
			<input type="text" class="form-control" asp-for="@Model.Info"/>
			<span class="text text-danger" asp-validation-for="@Model.Info"></span>
	</div>
	<div class="form-group">
		    <label asp-for="@Model.ApplyText" >ApplyText:</label>
			<input type="text" class="form-control" asp-for="@Model.ApplyText"/>
			<span class="text text-danger" asp-validation-for="@Model.ApplyText"></span>
	</div>
		<div class="form-group">
		    <label asp-for="@Model.Name" >Name:</label>
			<input type="text" class="form-control" asp-for="@Model.Name"/>
			<span class="text text-danger" asp-validation-for="@Model.Name"></span>
	</div>
		<div class="form-group">
		    <label asp-for="@Model.AboutText" >AboutText:</label>
			<input type="text" class="form-control" asp-for="@Model.AboutText"/>
			<span class="text text-danger" asp-validation-for="@Model.AboutText"></span>
	</div>
		<div class="form-group">
		    <label asp-for="@Model.Certification" >Certification:</label>
			<input type="text" class="form-control" asp-for="@Model.Certification"/>
			<span class="text text-danger" asp-validation-for="@Model.Certification"></span>
	</div>

	<div class="form-group">
            <select asp-for="CourseCategoryId" class="form-select" aria-label="Default select example">
                <option selected>Select Category</option>
                @foreach (var item in  ViewBag.CourseCategory)
                {
                    <option value="@item.Id">@item.Name</option>

                }
            </select>
            <span class="text text-danger" asp-validation-for="CourseCategoryId"></span>
        </div>
		       <div class="form-group">
            <select multiple asp-for="TagIds" class="form-select" aria-label="Disabled select example">
                @foreach (var item in ViewBag.Tag)
                {
                    @if (Model.CourseTags.Any(x => x.TagId == item.Id))
                    {
                        <option selected value="@item.Id">@item.Name</option>
                    }
                    else
                    {
                        <option value="@item.Id">@item.Name</option>
                    }

                }
            </select>
            <span class="text text-danger" asp-validation-for="TagIds"></span>
        </div>
	<div class="form-group">
		    <label asp-for="@Model.FormFile" >File:</label>
			<input type="file" class="form-control" asp-for="@Model.FormFile"/>
			<span class="text text-danger" asp-validation-for="@Model.FormFile"></span>
    </div>
			@Html.AntiForgeryToken()
	<button type="submit" class="btn btn-info">Create</button>
	</form>
</div>
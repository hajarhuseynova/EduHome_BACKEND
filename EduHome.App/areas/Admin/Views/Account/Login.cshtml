@model LoginViewModel

	
   <div class="login-area pt-150 pb-150 " style="width:100%; margin-left:300px">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3 text-center">
                        <div class="login">
                            <div class="login-form-container">
                                <div class="login-text">
                                    <h2>login</h2>
                                    <span>Please login using account detail bellow.</span>
                                </div>
                                <div class="login-form">
                                    <form action="#" method="post">
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="UserName" class="form-control" placeholder="UserName" />
                                        </div>
                                        <span class="text text-danger" asp-validation-for="UserName"></span>

                                          <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Password" class="form-control" placeholder="Password" />
                                        </div>
                                        <span class="text text-danger" asp-validation-for="Password"></span>

                                        <div class="button-box">
                                            <div class="login-toggle-btn">
                                                <input type="checkbox" id="remember">
                                                <label for="remember">Remember me</label>
                                                <a asp-controller="account" asp-action="forgetpassword">Forgot Password</a>
                                            </div>
                                            <button type="submit" class="default-btn">Login</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
   </div>
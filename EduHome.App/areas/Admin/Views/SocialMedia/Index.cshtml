@model IEnumerable<SocialMedia>
<div class="container">
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                    <th scope="col">Link</th>
                  
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <th scope="row">@item.Id</th>
                     <td>@item.Teacher.FullName</td>
                        <td style="overflow-x:hidden; ">@item.Link</td>
                
                        <td><a asp-controller="socialMedia" asp-action="update" asp-route-id="@item.Id" >
                            <i class="fas fa-edit text text-primary"></i></a></td>
                        <td><a onclick="if(!confirm('Are you sure?')){return false;}"
                            asp-controller="socialMedia" asp-action="delete" asp-route-id="@item.Id"
                            class=" delete-item" ><i class="fas fa-trash text text-danger"></i></a></td>
                    </tr>
            }
        </tbody>
    </table>
    <div>
        <a asp-controller="socialMedia" asp-action="create" style="display: block; text-decoration: none; color: white; width: 100%; height: 100%" a  > 
            <div style="width:100%; " class="btn btn-outline-success">Create </div></a>
    </div>
</div>